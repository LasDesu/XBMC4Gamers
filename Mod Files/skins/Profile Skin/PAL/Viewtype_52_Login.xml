										<onup>9000</onup>
										<ondown>82</ondown>
										<viewtype label="view52">list</viewtype>
										<pagecontrol>82</pagecontrol>
										<scrolltime>220</scrolltime>
										<focusposition>3</focusposition>
										<movement>0</movement>
										<orientation>horizontal</orientation>
										<preloaditems>3</preloaditems>
										<itemlayout height="428" width="216">
												<control type="image">
														<posx>2</posx>
														<posy>0</posy>
														<width>214</width>
