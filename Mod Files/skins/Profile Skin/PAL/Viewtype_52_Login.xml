												<control type="image">
														<posx>7</posx>
														<posy>5</posy>
														<width>204</width>
														<height>204</height>
														<aspectratio>scale</aspectratio>
														<fadetime>ThumbCrossfadeTime</fadetime>
														<texture background="true">$INFO[listitem.icon]</texture>
														<visible>!isEmpty(ListItem.Thumb) + ListItem.IsFolder + Skin.HasSetting(_resourcesenabled)</visible>
												</control>
												<control type="largeimage">
														<posx>7</posx>
														<posy>5</posy>
														<width>204</width>
														<height>204</height>
														<aspectratio>scale</aspectratio>
														<fadetime>ThumbCrossfadeTime</fadetime>
														<texture background="true">$INFO[listitem.path,,_resources\artwork\poster.jpg]</texture>
														<visible>Skin.HasSetting(_resourcesenabled)</visible>
												</control>
												<control type="image">
														<posx>10</posx>
														<posy>8</posy>
														<width>25</width>
														<height>25</height>
														<aspectratio>stretch</aspectratio>
														<fadetime>ThumbCrossfadeTime</fadetime>
														<texture>$INFO[listitem.overlay]</texture>
												</control>
										</itemlayout>
										<focusedlayout height="428" width="216">
												<control type="image">
														<posx>2</posx>
														<posy>0</posy>
														<width>214</width>
														<height>214</height>
														<aspectratio>stretch</aspectratio>
														<texture background="true" border="5">button-focus.png</texture>
														<animation reversible="false" effect="fade" end="0" time="0">focus</animation>
														<animation reversible="false" effect="zoom" end="2,0,214,214" start="-8,-10,234,234" time="200">unfocus</animation>
												</control>
												<control type="image">
														<posx>2</posx>
														<posy>0</posy>
														<width>214</width>
														<height>214</height>
														<aspectratio>stretch</aspectratio>
														<texture background="true" border="5">button-focus.png</texture>
														<animation reversible="false" effect="zoom" start="2,0,214,214" end="-8,-10,234,234" time="200">focus</animation>
														<animation reversible="false" effect="fade" end="0" time="0">unfocus</animation>
												</control>
												<control type="image">
														<posx>7</posx>
														<posy>5</posy>
														<width>204</width>
														<height>204</height>
														<aspectratio>stretch</aspectratio>
														<texture background="true">black-back.png</texture>
														<bordersize>1</bordersize>
														<animation reversible="false" effect="zoom" start="7,5,204,204" end="-3,-5,224,224" time="200">focus</animation>
														<animation reversible="false" effect="zoom" end="7,5,204,204" start="-3,-5,224,224" time="200">unfocus</animation>
												</control>
												<control type="image">
														<posx>7</posx>
														<posy>5</posy>
														<width>204</width>
														<height>204</height>
														<aspectratio>scale</aspectratio>
														<fadetime>ThumbCrossfadeTime</fadetime>
														<texture background="true" fallback="no_loginIcon.jpg">$INFO[listitem.icon]</texture>
														<animation reversible="false" effect="zoom" start="7,5,204,204" end="-3,-4,222,222" time="200">focus</animation>
														<animation reversible="false" effect="zoom" end="7,5,204,204" start="-3,-4,222,222" time="200">unfocus</animation>
														<visible>!Skin.HasSetting(_resourcesenabled)</visible>
												</control>
												<control type="image">
														<posx>7</posx>
														<posy>5</posy>
														<width>204</width>
														<height>204</height>
														<aspectratio>scale</aspectratio>
														<texture background="true">no_loginIcon.jpg</texture>
														<animation reversible="false" effect="zoom" start="7,5,204,204" end="-3,-4,222,222" time="200">focus</animation>
														<animation reversible="false" effect="zoom" end="7,5,204,204" start="-3,-4,222,222" time="200">unfocus</animation>
														<visible>Skin.HasSetting(_resourcesenabled)</visible>
												</control>
												<control type="image">
														<posx>7</posx>
														<posy>5</posy>
														<width>204</width>
														<height>204</height>
														<aspectratio>scale</aspectratio>
														<fadetime>ThumbCrossfadeTime</fadetime>
														<texture background="true">$INFO[listitem.icon]</texture>
														<animation reversible="false" effect="zoom" start="7,5,204,204" end="-3,-4,222,222" time="200">focus</animation>
														<animation reversible="false" effect="zoom" end="7,5,204,204" start="-3,-4,222,222" time="200">unfocus</animation>
														<visible>!isEmpty(ListItem.Thumb) + ListItem.IsFolder + Skin.HasSetting(_resourcesenabled)</visible>
												</control>
												<control type="largeimage">
														<posx>7</posx>
														<posy>5</posy>
														<width>204</width>
														<height>204</height>
														<aspectratio>scale</aspectratio>
														<fadetime>ThumbCrossfadeTime</fadetime>
														<texture background="true">$INFO[listitem.path,,_resources\artwork\poster.jpg]</texture>
														<animation reversible="false" effect="zoom" start="7,5,204,204" end="-3,-4,222,222" time="200">focus</animation>
														<animation reversible="false" effect="zoom" end="7,5,204,204" start="-3,-4,222,222" time="200">unfocus</animation>
														<visible>Skin.HasSetting(_resourcesenabled)</visible>
												</control>
												<control type="image">
														<posx>10</posx>
														<posy>8</posy>
														<width>25</width>
														<height>25</height>
														<aspectratio>stretch</aspectratio>
														<fadetime>ThumbCrossfadeTime</fadetime>
														<texture>$INFO[listitem.overlay]</texture>
														<animation reversible="false" effect="zoom" start="10,8,25,25" end="0,-3,30,30" time="200">focus</animation>
														<animation reversible="false" effect="zoom" end="10,8,25,25" start="0,-3,30,30" time="200">unfocus</animation>
												</control>
										</focusedlayout>
								</control>
								<control type="label">
										<posx>0</posx>
										<posy>115r</posy>
										<width>720</width>
										<height>36</height>
										<font>size_35</font>
										<textcolor>$VAR[var-labelcolour]</textcolor>
										<scroll>true</scroll>
										<align>center</align>
										<aligny>center</aligny>
										<label>[UPPERCASE]$INFO[ListItem.Label][/UPPERCASE]</label>
										<animation effect="fade" start="100" end="0" time="0" condition="Skin.HasSetting(hidefoldernames) + !Container(52).ListItem.IsFolder">Conditional</animation>
										<animation effect="fade" start="100" end="0" time="0" condition="Skin.HasSetting(hidegamenames) + Container(52).ListItem.IsFolder">Conditional</animation>
								</control>
								<control type="label">
										<posx>0</posx>
										<posy>69r</posy>
										<width>720</width>
										<height>30</height>
										<font>size_15</font>
										<textcolor>$VAR[var-labelcolour]</textcolor>
										<scroll>true</scroll>
										<align>center</align>
										<aligny>center</aligny>
										<label>$LOCALIZE[31186]</label>
										<visible>StringCompare(ListItem.ProgramCount,0) + !Control.HasFocus(82) + !ListItem.IsFolder</visible>
										<animation effect="fade" start="100" end="0" time="0" condition="Skin.HasSetting(hidefoldernames) + !Container(52).ListItem.IsFolder">Conditional</animation>
										<animation effect="fade" start="100" end="0" time="0" condition="Skin.HasSetting(hidegamenames) + Container(52).ListItem.IsFolder">Conditional</animation>
								</control>
								<control type="label">
										<posx>0</posx>
										<posy>69r</posy>
										<width>720</width>
										<height>30</height>
										<font>size_15</font>
										<textcolor>$VAR[var-labelcolour]</textcolor>
										<scroll>true</scroll>
										<align>center</align>
										<aligny>center</aligny>
										<label>$LOCALIZE[31187] $INFO[ListItem.ProgramCount,, $LOCALIZE[31188]]</label>
										<visible>StringCompare(ListItem.ProgramCount,1) + !Control.HasFocus(82) + !ListItem.IsFolder</visible>
										<animation effect="fade" start="100" end="0" time="0" condition="Skin.HasSetting(hidefoldernames) + !Container(52).ListItem.IsFolder">Conditional</animation>
										<animation effect="fade" start="100" end="0" time="0" condition="Skin.HasSetting(hidegamenames) + Container(52).ListItem.IsFolder">Conditional</animation>
								</control>
								<control type="label">
										<posx>0</posx>
										<posy>69r</posy>
										<width>720</width>
										<height>30</height>
										<font>size_15</font>
										<textcolor>$VAR[var-labelcolour]</textcolor>
										<scroll>true</scroll>
										<align>center</align>
										<aligny>center</aligny>
										<label>$LOCALIZE[31187] $INFO[ListItem.ProgramCount,, $LOCALIZE[31189]]</label>
										<visible>IntegerGreaterThan(ListItem.ProgramCount,1) + !Control.HasFocus(82) + !ListItem.IsFolder</visible>
										<animation effect="fade" start="100" end="0" time="0" condition="Skin.HasSetting(hidefoldernames) + !Container(52).ListItem.IsFolder">Conditional</animation>
										<animation effect="fade" start="100" end="0" time="0" condition="Skin.HasSetting(hidegamenames) + Container(52).ListItem.IsFolder">Conditional</animation>
								</control>
								<control type="scrollbar" id="82">
										<posx>85</posx>
										<posy>662</posy>
										<width>550</width>
										<height>15</height>
										<texturesliderbackground border="2,2,2,2">black-back.png</texturesliderbackground>
										<texturesliderbar border="16,2,16,2">scrollbar_bar-vertical.png</texturesliderbar>
										<texturesliderbarfocus border="16,2,16,2">scrollbar_bar_focus-vertical.png</texturesliderbarfocus>
										<textureslidernib>scrollbar_nib-vertical.png</textureslidernib>
										<textureslidernibfocus>scrollbar_nib-vertical.png</textureslidernibfocus>
										<onup>52</onup>
										<ondown>-</ondown>
										<showonepage>false</showonepage>
										<orientation>horizontal</orientation>
										<visible allowhiddenfocus="true">Control.HasFocus(82)</visible>
										<animation reversible="true" effect="fade" start="0" end="100" delay="" time="300">visible</animation>
										<animation reversible="true" effect="fade" start="100" end="0" delay="" time="300">hidden</animation>
								</control>
						</control>
				</control>
		</include>
</includes>
